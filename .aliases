#!/bin/bash

#Shortcuts
alias dl="cd ~/Downloads"

# IP address
alias pubip="curl ifconfig.co"
alias localip="/sbin/ifconfig "en0" 2>/dev/null | grep 'inet ' | awk '{print $2}'"

#Common Aliases
alias cp='cp -i'
alias mv='mv -i'
alias untar='tar xvf'
alias h="history"


# I hate them
alias rmds="find . -name '.DS_Store' -type f -delete"

# Git
alias g="git"
alias gss="git status -s"
alias gcm="git commit -m"
alias gco="git checkout"
alias gdi="git diff"
alias glg="git log -p"
alias gls="git ls-files"
alias gpa="git push && git push gitea"

# Docker
alias d="docker"
alias dm="docker-machine"
alias dki="docker image"
alias dks="docker service"
alias dkl="docker logs"

# Tmux
alias ta="tmux attach -t"
alias tad="tmux attach -d -t"
alias ts="tmux new-session -s"
alias tl="tmux list-sessions"
alias tks="tmux kill-session -t"

#GO
alias gob='go build'
alias goc='go clean'
alias god='go doc'
alias gof='go fmt'
alias gofa='go fmt ./...'
alias gog='go get'
alias goi='go install'
alias gol='go list'
alias gopb='cd $GOPATH/bin'
alias gops='cd $GOPATH/src'
alias gor='go run'
alias got='go test'
alias gov='go vet'

#NPM
alias npmo="npm outdated"
alias npmlg="npm list"
alias npml="npm ls --depth=0"
alias npms="npm start"
alias npmt="npm test"
alias npmr="npm run"
